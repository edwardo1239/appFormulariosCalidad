---
import MainButton from "../components/MainButton.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Celifrut">
	<nav>
		<MainButton href="/volante-calidad">
			<p slot="label">Volante Calidad</p>
			<svg
				slot="icon"
				xmlns="http://www.w3.org/2000/svg"
				width="24"
				height="24"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="2"
				stroke-linecap="round"
				stroke-linejoin="round"
				class="icon icon-tabler icons-tabler-outline icon-tabler-certificate"
				><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
					d="M15 15m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path><path
					d="M13 17.5v4.5l2 -1.5l2 1.5v-4.5"></path><path
					d="M10 19h-5a2 2 0 0 1 -2 -2v-10c0 -1.1 .9 -2 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -1 1.73"
				></path><path d="M6 9l12 0"></path><path d="M6 12l3 0"
				></path><path d="M6 15l2 0"></path></svg
			>
		</MainButton>
		<MainButton href="/higiene-personal">
			<p slot="label">Higiene Personal</p>
			<svg slot="icon" width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-bath"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M4 12h16a1 1 0 0 1 1 1v3a4 4 0 0 1 -4 4h-10a4 4 0 0 1 -4 -4v-3a1 1 0 0 1 1 -1z" /><path d="M6 12v-7a2 2 0 0 1 2 -2h3v2.25" /><path d="M4 21l1 -1.5" /><path d="M20 21l-1 -1.5" /></svg>
		</MainButton>
	</nav>
</Layout>

<style>
	nav {
		width: auto;
		display: flex;
		flex-direction: column;
		gap: 5px;
		align-items: center;
		padding: 18px;
		height: 100%;
		background-image: url("../assets/img-naranjas-limones-celifrut.png");
		background-size: auto;
		background-position: center;
		background-repeat: no-repeat;
	}
</style>
