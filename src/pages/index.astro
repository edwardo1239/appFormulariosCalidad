---
import MainButton from "../components/MainButton.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Celifrut">
	<nav>
		<MainButton href="/volante-calidad">
			<p slot="label">Volante Calidad</p>
			<svg
				slot="icon"
				xmlns="http://www.w3.org/2000/svg"
				width="24"
				height="24"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="2"
				stroke-linecap="round"
				stroke-linejoin="round"
				class="icon icon-tabler icons-tabler-outline icon-tabler-certificate"
				><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
					d="M15 15m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path><path
					d="M13 17.5v4.5l2 -1.5l2 1.5v-4.5"></path><path
					d="M10 19h-5a2 2 0 0 1 -2 -2v-10c0 -1.1 .9 -2 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -1 1.73"
				></path><path d="M6 9l12 0"></path><path d="M6 12l3 0"
				></path><path d="M6 15l2 0"></path></svg
			>
		</MainButton>
		<MainButton href="/ingresar-operario">
			<p slot="label" >Ingresar operario</p>
			<svg
				slot="icon"
				width="24"
				height="24"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="2"
				stroke-linecap="round"
				stroke-linejoin="round"
				class="icon icon-tabler icons-tabler-outline icon-tabler-user-plus"
				><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
					d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"></path><path
					d="M16 19h6"></path><path d="M19 16v6"></path><path
					d="M6 21v-2a4 4 0 0 1 4 -4h4"></path></svg
			>
		</MainButton>
	</nav>
</Layout>

<style>
	nav {
		width: auto;
		display: flex;
		flex-direction: column;
		gap: 5px;
		align-items: center;
		padding: 18px;
		height: 100%;
		background-image: url("../assets/img-naranjas-limones-celifrut.png");
		background-size: auto;
		background-position: center;
		background-repeat: no-repeat;
	}
</style>
