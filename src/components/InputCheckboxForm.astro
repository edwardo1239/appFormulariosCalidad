---
interface Props {
    label: string
    id:string
    name:string
    clase: string
}

const { label, id, name, clase } = Astro.props
---

<label>
    {label}
    <input type="checkbox" name={name} id={id} class={clase}>
</label>


<style>
    label{
        display: flex;
        flex-direction: row;
        font-weight: bold;
        gap: 2px;
        width: auto;
        align-items: center;
        font-size: 25px;
        gap: 15px;
        background-color: white;
        border-radius: 18px;
        padding: 2px 16px;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }
    input{
        padding: 5px;
        border-radius: 8px;
        width: 25px;
        height: 25px;
    }
</style>