---
import { Image } from 'astro:assets'
import logoCelifrut from '../assets/CELIFRUT-removebg-preview.png'
---

<header>
        <a href="/">
            <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-menu-2"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M4 6l16 0"></path><path d="M4 12l16 0"></path><path
                d="M4 18l16 0"></path></svg
        >
        </a>
        <Image src={logoCelifrut} alt="Logo Celifrut" width='50'/height='50'>
</header>

<style>
    header{
        box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 6px -1px, rgba(0, 0, 0, 0.06) 0px 2px 4px -1px;
        margin: 0;
        display: flex;
        justify-content: space-between;
        padding: 14px;
        align-items: center;
        color: black;
    }
    button{
        background-color: rgb(255, 255, 255);
        border: none;
        padding: 8px;

    }
    button:hover{
        background-color: rgb(181, 184, 187);
        border-radius: 50%;
        cursor: pointer;
    }
</style>
